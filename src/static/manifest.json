{
	"name": "YouToo for YouTube",
	"version": "1.0",
	"description": "Watch YouTube videos together",
	"manifest_version": 2,
	"permissions": ["storage"],
	"background": {
		"scripts": ["background.js"],
		"persistent": true
	},
	"content_scripts": [
		{
			"matches": ["https://www.youtube.com/*"],
			"js": ["contentScript.js"],
			"run_at": "document_start"
		}
	],
	"web_accessible_resources": ["injectedRuntime.js", "fonts/*", "images/*"],
	"externally_connectable": {
		"matches": ["https://www.youtube.com/*"]
	}
}
