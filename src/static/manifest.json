{
	"name": "<%= package.name %>",
	"version": "<%= package.version %>",
	"description": "<%= package.description %>",
	"manifest_version": 2,
	"permissions": ["storage"],
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"content_scripts": [
		{
			"matches": ["https://www.youtube.com/*"],
			"js": ["contentScript.js"],
			"run_at": "document_start"
		}
	],
	"web_accessible_resources": ["page.js", "fonts/*", "images/*"],
	"externally_connectable": {
		"matches": ["https://www.youtube.com/*"]
	}
}
